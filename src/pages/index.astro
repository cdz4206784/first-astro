---
import { Image } from 'astro:assets';

import BaseLayout from '../layouts/BaseLayout.astro';

import Greeting from '../components/Greeting';

import Counter from '../components/Counter.vue';

const pageTitle = "首页";

---
<BaseLayout pageTitle={pageTitle}>
  <Image src='https://picsum.photos/600/300' alt="banner" width="600" height="300" slot="after-header" />
  <!-- <img src="https://picsum.photos/600/300" slot="after-header" /> -->
  
  <h2>我超棒的博客副标题</h2>

  <!-- client:load 指令告诉 Astro 在页面加载时将其 JavaScript 发送并重新运行到客户端上，使组件可交互。这称为被注水的组件 -->
  <Greeting client:load messages={['你好', '欢迎', 'こんにちは', 'Привет', 'Hola', 'Bonjour', 'Ciao', '안녕하세요']} />

  <Counter client:load>
    <span>Vue框架组件:</span>
  </Counter>

  <p slot="after-footer">版权所有 2025</p>
</BaseLayout>

<script>
  console.log('你好，浏览器控制台！');
</script>